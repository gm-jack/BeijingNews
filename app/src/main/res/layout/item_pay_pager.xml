<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/cb_pay_pager"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" />

    <ImageView
        android:id="@+id/iv_pay_pager"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
        android:scaleType="fitXY"
        android:src="@drawable/pic_item_list_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_pay_pager_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="hahahahahahhah" />

        <TextView
            android:id="@+id/tv_pay_pager_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:text="8888" />

        <com.gm.beijingnews.view.AddAndSubView
            android:id="@+id/aasv_add_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:value="1"
            app:maxValue="21"></com.gm.beijingnews.view.AddAndSubView>
    </LinearLayout>
</LinearLayout>