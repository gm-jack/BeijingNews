<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rg_man_tag"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_tab_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <RadioButton
        android:id="@+id/rb_home"
        style="@style/bottom_style_tag"
        android:drawableTop="@drawable/rb_home_selector"
        android:text="首页"

        />

    <RadioButton
        android:id="@+id/rb_news"
        style="@style/bottom_style_tag"
        android:drawableTop="@drawable/rb_news_selector"
        android:text="新闻"

        />

    <RadioButton
        android:id="@+id/rb_smartservcie"
        style="@style/bottom_style_tag"
        android:drawableTop="@drawable/rb_smartservcie_selector"
        android:text="智慧"

        />


    <RadioButton
        android:id="@+id/rb_govaffair"
        style="@style/bottom_style_tag"
        android:drawableTop="@drawable/rb_govaffair_selector"
        android:text="政要"

        />

    <RadioButton
        android:id="@+id/rb_setting"
        style="@style/bottom_style_tag"
        android:drawableTop="@drawable/rb_setting_selector"
        android:text="设置"

        />


</RadioGroup>